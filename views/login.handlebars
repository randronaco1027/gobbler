<div class="login">
  <form>
    <h2>Register Today!</h2>
    <div class="mt-2">
      <label for="name" class="form-label">Enter full name:</label>
      <input type="text" placeholder="Your Name" name="name" id="name" class="form-control " />
    </div>
    <div class="mt-2">
      <label for="email" class="form-label">Enter email address:</label>
      <input type="text" placeholder="Email Address" name="email" id="email" class="form-control " />
    </div>
    <div class="mt-2">
      <label for="password" class="form-label">Enter password:</label>
      <input type="text" placeholder="Password" name="password" id="password" class="form-control " />
    </div>
    <div>
      <button type="submit" class="btn btn-primary mt-2">Bon Appetit</button>
    </div>
  </form>

  <form>
    <h2>Login with Existing Account</h2>
    <div class="mt-2">
      <label for="email" class="form-label">Enter email address:</label>
      <input type="text" placeholder="Email Address" name="email" id="existingEmail" class="form-control " />
    </div>
    <div class="mt-2">
      <label for="password" class="form-label">Enter password:</label>
      <input type="text" placeholder="Password" name="password" id="existingPassword" class="form-control " />
    </div>
    <div>
      <button type="submit" class="btn btn-primary mt-2">Bon Appetit</button>
    </div>
  </form>
</div>