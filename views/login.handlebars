<div class="login">
  <form class="signup-form">
    <h2>Register Today!</h2>
    <div class="mt-2">
      <label for="name" class="form-label">Enter full name:</label>
      <input type="text" placeholder="Your Name" name="name" id="username-signup" class="form-control " autocomplete="none"/>
    </div>
    <div class="mt-2">
      <label for="email" class="form-label">Enter email address:</label>
      <input type="text" placeholder="Email Address" name="email" id="email-signup" class="form-control " autocomplete="off"/>
    </div>
    <div class="mt-2">
      <label for="password" class="form-label">Enter password:</label>
      <input type="password" placeholder="Password" name="password" id="password-signup" class="form-control " />
    </div>
    <div>
      <button type="submit" class="btn btn-primary mt-2">Bon Appetit</button>
    </div>
  </form>

  <form class="login-form">
    <h2>Login with Existing Account</h2>
    <div class="mt-2">
      <label for="email" class="form-label">Enter email address:</label>
      <input type="text" placeholder="Email Address" name="email" id="email-login" class="form-control " autocomplete="off"/>
    </div>
    <div class="mt-2">
      <label for="password" class="form-label">Enter password:</label>
      <input type="password" placeholder="Password" name="password" id="password-login" class="form-control " autocomplete="none"/>
    </div>
    <div>
      <button type="submit" class="btn btn-primary mt-2">Bon Appetit</button>
    </div>
  </form>
</div>
<script src="/javascript/login.js"></script>